# Database Configuration
# Copy this file to .env and update with your PostgreSQL credentials

DATABASE_URL=postgresql://your_username@localhost:5432/lny_products

# Flask Secret Key (Generate a secure random key for production)
SECRET_KEY=your-secret-key-here-change-in-production

# API Security
API_KEY=your-api-key-here

# Application Settings
FLASK_ENV=development
DEBUG=True

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Format: postgresql://username:password@host:port/database_name
#
# Default values:
# - username: your PostgreSQL username
# - password: your PostgreSQL password (if set)
# - host: localhost
# - port: 5432
# - database: lny_products
